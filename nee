import React, { useState } from 'react';
import ReactMarkdown from 'react-markdown';
import OpenAI from "openai";
import '../styles/GptArena.css';
import button from '../assets/button.svg';

const api_key = process.env.REACT_APP_OPENAI_API_KEY;
const openai = new OpenAI({apiKey: api_key, dangerouslyAllowBrowser: true});

const modelMapping = {
  model1: "gpt-3.5-turbo",
  model2: "gpt-4-1106-preview", 
  model3: "google/flan-t5-base" 
};

// Hugging Face API Function
async function queryHuggingFace(prompt) { 
  const response = await fetch("https://api-inference.huggingface.co/models/google/flan-t5-base", { 
    headers: { Authorization: "Bearer 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" }, 
    method: "POST", 
    body: JSON.stringify({ "inputs": prompt }), 
  }); 
  const result = await response.json(); 
  return result; 
}

const GptArena = () => {
  const [input, setInput] = useState('');
  const [outputGpt, setOutputGpt] = useState({model1: '', model2: ''})
  const [outputHuggingFace, setOutputHuggingFace] = useState('');

   const handleInputChange = e => {
    setInput(e.target.value);
  }

  const handleSubmitGpt = async (model) => {
    const actualModelId = modelMapping[model];
    try {
      const completion = await openai.chat.completions.create({
        messages: [{ role: "user", content: input }],
        model: actualModelId,
        stream: true,
      });
      for await (const chunk of completion) {
        let content = chunk.choices[0]?.delta?.content;
        if (content === undefined) {
          break;
        }
        setOutputGpt(prevOutput => ({
          ...prevOutput,
          [model] : (prevOutput[model] || '') + content
        }));
      }
    } catch (error) {
      console.error("Error fetching from OpenAI:", error);
    }
  }

  const handleSubmitHuggingFace = async (input) => {
    try {
      const response = await queryHuggingFace(input); 
      const generatedText = response.generated_text; // Assuming API response structure
      setOutputHuggingFace(generatedText); 
    } catch (error) {
      console.error("Error fetching from Hugging Face model:", error);
      setOutputHuggingFace("An error occurred."); 
    }
  }

  const handleCombinedSubmit = () => {
    setOutputGpt({model1: '', model2: ''});
    setOutputHuggingFace(''); 
    handleSubmitGpt('model1');
    handleSubmitGpt('model2');
    handleSubmitHuggingFace(input); 
  }

  const handleKeyPress = (e) => {
    if (e.key === 'Enter') {
      e.preventDefault();
      handleCombinedSubmit();
    }
  };

  return (
    <div className='main-page'>
      <header>GPT Arena</header>
      <div className='gpt-container'>
        <div className='container'>
          <h2>GPT 3.5 Turbo</h2>
          <div className="markdown-content">
            <ReactMarkdown>{outputGpt.model1}</ReactMarkdown>
          </div>
        </div>
        <div className='container'>
          <h2>GPT 4</h2>
          <div className="markdown-content">
            <ReactMarkdown>{outputGpt.model2}</ReactMarkdown>
          </div>
        </div>
        <div className='container'> 
          <h2>Hugging Face Model</h2> 
          <div className="markdown-content">
            <ReactMarkdown>{outputHuggingFace}</ReactMarkdown>
          </div>
        </div>
      </div>
      <div>
        <div className='message-chat-gpt'>
          <input type='text' value={input} onChange={handleInputChange} onKeyDown={handleKeyPress} placeholder='Message ChatGPT...' />
          <img src={button} onClick={handleCombinedSubmit} className='send' alt='send'/>
        </div>
      </div>
    </div>
  )
}

export default GptArena;
